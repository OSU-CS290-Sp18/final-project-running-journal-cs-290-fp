<!DOCTYPE html>
<html>
<head>
 <title>This is my website</title>
 <link rel="stylesheet" href="/style.css" media="screen">

   <!-- This script incorporates SVG icons from Font Awesome: http://fontawesome.com/ -->
   <script src="https://use.fontawesome.com/releases/v5.0.9/js/all.js" defer></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.runtime.js" defer></script>
   <!-- <script src="/entryTemplate.js" charset="utf-8" defer></script> -->

   <script src="/index.js" charset="utf-8" defer></script>
</head>
<body>

<div class="header">
  <h2>Forward Progress</h2>
</div>

<div class="row">
  <div class="leftcolumn">

    {{#each entry}}
      {{> entryCard}}
    {{/each}}

  </div>
</div>

<div class="footer">
  <h2>Footer</h2>
</div>

<button type="button" id="create-log">
  <i class="fa fa-edit"></i>
</button>

<div id="modal-backdrop" class="hidden"></div>
<div id="create-log-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Record a Log</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="log-input-element">
        <label for="log-text-input">Title</label>
        <input type="text" id="log-attribution-input">
      </div>

      <div class = "log-input-element">
          <label for = "log-date-input">Date</label>
          <input type = "text" id="log-date-input">
      </div>

      <div class="log-input-element">
        <label for="log-text-input">Entry</label>
        <textarea id="log-text-input"></textarea>
      </div>

      <div class="log-input-element">
        <label for="log-miles-input">Miles</label>
        <input type="text" id="log-miles-input">
      </div>

    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" class="modal-accept-button">Create Log</button>
    </div>

  </div>
</div>
